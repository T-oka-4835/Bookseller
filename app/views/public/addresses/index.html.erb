<h4>住所</h4>

<div>
  <p>
    新しい住所
  </p>

  <%= form_with model:@address, url: addresses_path, local:true do |f| %>
    <p>氏名</p>
    <%= f.text_field :name %>

    <p>郵便番号</p>
    <%= f.text_field :postal_code %>

    <p>住所</p>
    <%= f.text_field :address %>

  <%= f.submit "住所を追加" %>
  <% end %>

</div>

<div>
  <p>既定の住所</p>
  <table>
    <thead>
      <tr>
        <th>名前</th>
        <th>郵便番号</th>
        <th>住所</th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td>
            <%= address.name %>
          </td>
          <td>
            <%= address.postal_code %>
          </td>
          <td>
            <%= address.address %>
          </td>
          <td>
            <%= link_to "編集する", edit_address_path(address) %>
          </td>
          <td>
            <%= link_to "削除する", address_path(address), method: :delete %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

