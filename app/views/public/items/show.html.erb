<h1>商品詳細ページ</h1>

<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h4>タイトル</h4>
      <%= @item.name %>

      <h4>紹介文</h4>
      <%= @item.introduction %>

      <h4>画像</h4>
      <%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg' %>

      <%= link_to "一覧に戻る", items_path %>
    </div>
    <div class="col-lg-3">
      <div>
        <%= link_to "カートに入れる", carts_path %>
      </div>
    </div>
  </div>
</div>

