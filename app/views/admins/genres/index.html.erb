<h1>ジャンル一覧/追加</h1>

<%= form_with model: @genre, url: admins_genres_path, local: true do |f| %>
  <p>ジャンル</p>
  <%= f.text_field :name %>

  <div>
    <%= f.radio_button :is_active, "有効" %>有効
  </div>
  <div>
    <%= f.radio_button :is_active, '無効' %>無効
  </div>

  <%= f.submit "追加", class: "btn btn-primary" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td><%= genre.is_active %></td>
      <td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
    </tr>
    <% end %>
  </tbody>
</table>